@model Client
@{
    ViewData["Title"] = "Delete";
    SelectList StatusItem =
            new SelectList(ViewBag.statusList, "Id", "Status");
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3 ">
        <div class="row">
            <div class="text-white text-center"> <h4 class="text-white py-2">Delete Client</h4></div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" asp-action="Delete">
            <input asp-for="Id" hidden />
            <div class=" p-3 ">

                <div class="form-floating py-2 col-12">
                    <input asp-for="FirstName" disabled type="text" class="form-control shadow border-0" />
                    <label asp-for="FirstName" class="ms-2"></label>

                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="py-2 col-12">
                    <input asp-for="LastName" disabled type="text" class="form-control shadow border-0" />
                    <label asp-for="LastName" class="ms-2"></label>

                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DateBirth" disabled type="date" class="form-control shadow border-0" />
                    <label asp-for="DateBirth" class="ms-2"></label>

                    <span asp-validation-for="DateBirth" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Mobile" disabled type="text" class="form-control shadow border-0" />
                    <label asp-for="Mobile" class="ms-2"></label>

                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Email" disabled type="text" class="form-control shadow border-0" />
                    <label asp-for="Email" class="ms-2"></label>

                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                @* <div class="form-floating py-2 col-12">
                <input type="file" disabled name="files" class="form-control border-0 shadow" multiple />
                <label asp-for="Iamge" class="ms-2"></label>


                </div> *@
                <div class="form-floating py-2 col-12">

                    <select asp-for="StatusId" disabled class="form-select shadow border-0">
                        <option value="0">--Select Martial Status--</option>
                    </select>
                    <label asp-for="StatusId" class="ms-2"></label>



                    <span asp-validation-for="StatusId" class="text-danger"></span>

                </div>
                <div class="row mt-3">
                    <div class="col-6 col-sm-3">
                        <button class="btn  btn-danger form-control" type="submit">Delete</button>
                    </div>

                    <div class="col-6 col-sm-3">
                        <a asp-controller="Client" asp-action="Index" class="btn  btn-outline-secondary form-control">Back to list</a>
                    </div>
                </div>


        </form>
    </div>
</div>

