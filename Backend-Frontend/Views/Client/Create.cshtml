@model Client
@{
    ViewData["Title"] = "Create";
    SelectList StatusItem =
            new SelectList(ViewBag.statusList, "Id", "Status");
}
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3 ">
        <div class="row ">
            <div class="text-white text-center"> <h4 class="text-white py-2">Create Client</h4></div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" asp-action="create" class="row" enctype="multipart/form-data">
            <div class=" p-3 ">


                @* <div asp-validation-summary="All"></div> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="FirstName" type="text" class="form-control shadow border-0" />
                    <label asp-for="FirstName" class="ms-2"></label>

                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="py-2 col-12">
                    <input asp-for="LastName" type="text" class="form-control shadow border-0" />
                    <label asp-for="LastName" class="ms-2"></label>

                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DateBirth" type="date" class="form-control shadow border-0" />
                    <label asp-for="DateBirth" class="ms-2"></label>

                    <span asp-validation-for="DateBirth" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Mobile" type="text" class="form-control shadow border-0" />
                    <label asp-for="Mobile" class="ms-2"></label>

                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Email" type="text" class="form-control shadow border-0" />
                    <label asp-for="Email" class="ms-2"></label>

                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="file" name="files" class="form-control border-0 shadow" multiple />
                    <label asp-for="Iamge" class="ms-2"></label>


                </div>
                <div class="form-floating py-2 col-12">
                   
                    <select asp-for="StatusId" asp-items="StatusItem" class="form-select shadow border-0">
                        <option value="0">--Select Martial Status--</option>
                    </select>
                    <label asp-for="StatusId" class="ms-2"></label>
                
                   

                    <span asp-validation-for="StatusId" class="text-danger"></span>

                </div>
         
                <div class="row pt-2">
                    <div class="col-6 col-sm-3">
                        <button class="btn  btn-primary form-control" type="submit">Create</button>
                    </div>

                    <div class="col-6 col-sm-3">
                        <a asp-controller="Client" asp-action="Index" class="btn btn-outline-secondary form-control">Back to list</a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>
